# ZentriqVision Production Environment Configuration
# Copy this file to .env and fill in your actual values

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=production

# CDK Configuration
CDK_DEFAULT_ACCOUNT=your-aws-account-id
CDK_DEFAULT_REGION=us-east-1

# Stack Configuration
STACK_NAME=ZentriqVisionStack
STACK_ENVIRONMENT=production

# Resource Naming (optional - CDK will generate unique names if not specified)
VIDEO_BUCKET_NAME=zentriqvision-videos
DATA_TABLE_NAME=zentriqvision-data
USER_POOL_NAME=zentriqvision-users
API_NAME=zentriqvision-api

# Mobile App Configuration (update after deployment)
MOBILE_APP_API_URL=https://your-api-gateway-url.execute-api.us-east-1.amazonaws.com/prod
MOBILE_APP_USER_POOL_ID=us-east-1_your-user-pool-id
MOBILE_APP_USER_POOL_CLIENT_ID=your-user-pool-client-id
MOBILE_APP_VIDEO_BUCKET=zentriqvision-videos

# Monitoring and Logging
ENABLE_CLOUDWATCH_LOGS=true
ENABLE_XRAY_TRACING=false
LOG_RETENTION_DAYS=30

# Security Settings
ENABLE_CORS=true
ALLOWED_ORIGINS=*
ENABLE_API_KEY_AUTH=false
ENABLE_RATE_LIMITING=true

# Cost Optimization
ENABLE_S3_LIFECYCLE=true
ENABLE_DYNAMODB_AUTOSCALING=false
LAMBDA_TIMEOUT_MINUTES=15
LAMBDA_MEMORY_MB=1024
